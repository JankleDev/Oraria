                            "target_property_name": "#mana"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(($max_mana - #mana) / $max_mana)",
                            "target_property_name": "#clip_ratio"
                        }
                    ],
                    "controls": [
                        {
                            "data_control": {
